# ==========================================
# BILL MATE - Environment Variables Template
# ==========================================
# Copy this file to .env.local and fill in your actual values
# Do NOT commit .env.local to version control

# ==========================================
# NEXT.JS & APPLICATION
# ==========================================
NODE_ENV=production
PROTOCOL=https

# ==========================================
# AUTHENTICATION (NextAuth)
# ==========================================
# Must match your deployment URL (no trailing slash)
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_INTERNAL_URL=https://yourdomain.com

# Generate a random secret string (min 32 characters)
# Run: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-min-32-characters

# ==========================================
# DATABASE
# ==========================================
# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/billmate
MONGODB_DB=billmate

# ==========================================
# EMAIL SERVICE
# ==========================================
# For Gmail: Enable 2FA and create an App Password
# For other providers: Use your SMTP credentials
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM_NAME=ระบบหอพัก

# Optional: Contact email for notifications
CONTACT_EMAIL=admin@yourdomain.com

# Public app URL for email links
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# ==========================================
# CLOUD STORAGE (AWS S3)
# ==========================================
# Set to 'true' to enable S3, 'false' for local storage
USE_CLOUD_STORAGE=false

# If using S3:
AWS_S3_REGION=ap-southeast-1
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ==========================================
# ADMIN INITIALIZATION (first-time setup only)
# ==========================================
# Only used during initial setup via /api/init-admin
# Remove after first deployment
ADMIN_EMAIL=admin@billmate.local
ADMIN_PASSWORD=change-this-strong-password
ADMIN_NAME=Admin User
ADMIN_PHONE=0800000000

# ==========================================
# APPLICATION SETTINGS (Optional)
# ==========================================
# Application display name
APP_NAME=Bill Mate

# ==========================================
# OPTIONAL PRODUCTION SETTINGS
# ==========================================
# Log level: 'debug', 'info', 'warn', 'error'
# LOG_LEVEL=info

# Database connection pool size
# DATABASE_POOL_SIZE=10

# Session timeout in minutes
# SESSION_TIMEOUT=60

# Max file upload size in bytes
# MAX_FILE_UPLOAD_SIZE=10485760

# OCR confidence threshold (0-1)
# OCR_CONFIDENCE_THRESHOLD=0.8

# Cron job security token
# CRON_SECRET=your-random-cron-secret

# Force HTTPS in production
# HTTPS_ONLY=true
