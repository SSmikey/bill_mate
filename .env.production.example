# ==========================================
# PRODUCTION ENVIRONMENT VARIABLES FOR VERCEL
# ==========================================
# Add these in Vercel Dashboard > Settings > Environment Variables

# Application
NODE_ENV=production
PROTOCOL=https

# NextAuth - REQUIRED
NEXTAUTH_URL=https://your-app-name.vercel.app
NEXTAUTH_INTERNAL_URL=https://your-app-name.vercel.app
NEXTAUTH_SECRET=<generate-with-openssl-rand-base64-32>

# Database - REQUIRED
MONGODB_URI=mongodb+srv://webnextdatabase:webnext123@webnext.5wtvsao.mongodb.net/billmate?retryWrites=true&w=majority
MONGODB_DB=billmate

# Email - REQUIRED
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=<google-app-password>
EMAIL_FROM_NAME=ระบบหอพัก

# App URLs - REQUIRED
NEXT_PUBLIC_APP_URL=https://your-app-name.vercel.app
CONTACT_EMAIL=admin@yourdomain.com

# Admin Setup - ใช้ครั้งแรกอย่างเดียว แล้วลบออก
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=<strong-password>
ADMIN_NAME=Admin Name
ADMIN_PHONE=+66812345678

# Cloud Storage - OPTIONAL
USE_CLOUD_STORAGE=false
AWS_S3_REGION=ap-southeast-1
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Additional - OPTIONAL
APP_NAME=Bill Mate
CRON_SECRET=<random-secret-for-cron-jobs>
